<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 渐变色背景 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/gradient_background" />

        <!-- 标题栏 -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_green"
            android:elevation="4dp"
            app:title="查看报表"
            app:titleTextColor="@color/white"
            app:titleTextAppearance="@style/ToolbarTitle" />

        <!-- 按钮容器 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- 收入报表 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIncomeReport"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="收入报表"
                android:textColor="@color/primary_green"
                android:textSize="16sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_chart"
                app:iconTint="@color/primary_green"
                app:rippleColor="@color/light_green"
                app:strokeColor="@color/primary_green"
                app:strokeWidth="1dp" />

            <!-- 支出报表 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExpenseReport"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="支出报表"
                android:textColor="@color/primary_green"
                android:textSize="16sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_pie_chart"
                app:iconTint="@color/primary_green"
                app:rippleColor="@color/light_green"
                app:strokeColor="@color/primary_green"
                app:strokeWidth="1dp" />

            <!-- 财务报表 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFinancialReport"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="财务报表"
                android:textColor="@color/primary_green"
                android:textSize="16sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_finance"
                app:iconTint="@color/primary_green"
                app:rippleColor="@color/light_green"
                app:strokeColor="@color/primary_green"
                app:strokeWidth="1dp" />

            <!-- 产品损耗报表 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProductLossReport"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="产品损耗报表"
                android:textColor="@color/primary_green"
                android:textSize="16sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_loss"
                app:iconTint="@color/primary_green"
                app:rippleColor="@color/light_green"
                app:strokeColor="@color/primary_green"
                app:strokeWidth="1dp" />

            <!-- 采购商报表 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCustomerReport"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="采购商报表"
                android:textColor="@color/primary_green"
                android:textSize="16sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_customer"
                app:iconTint="@color/primary_green"
                app:rippleColor="@color/light_green"
                app:strokeColor="@color/primary_green"
                app:strokeWidth="1dp" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>