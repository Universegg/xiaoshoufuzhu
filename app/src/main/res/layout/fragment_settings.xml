<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background">

    <!-- 浅色渐变背景 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient"
        android:alpha="0.1"/>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_green"
        app:title="个人中心"
        app:titleTextColor="@color/white"
        app:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="8dp">

            <!-- 标题居中 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_centerInParent="true"/>

            <!-- 设置图标 -->
            <ImageView
                android:id="@+id/iv_settings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/setting"
                android:contentDescription="系统设置"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <!-- 退出图标 -->
            <ImageView
                android:id="@+id/iv_logout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toStartOf="@id/iv_settings"
                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                android:src="@drawable/sign_out"
                android:contentDescription="退出登录"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        </RelativeLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- 主体内容 -->
    <ScrollView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingVertical="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- 用户信息卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- 基本信息区 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="16dp"
                        android:padding="16dp"
                        android:background="@drawable/bg_section_divider">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_text"
                                android:layout_weight="1"/>

                            <!-- 添加编辑按钮 -->
                            <ImageView
                                android:id="@+id/iv_edit"
                                android:layout_width="20dp"
                                android:layout_height="24dp"
                                android:layout_centerVertical="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:backgroundTint="@color/white"
                                android:clickable="true"
                                android:contentDescription="编辑资料"
                                android:focusable="true"
                                android:src="@drawable/edit" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_role"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/secondary_text"
                            android:layout_marginTop="4dp"/>


                    </LinearLayout>

                    <!-- 详细信息列表 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp">

                        <com.example.xiaoshoufuzhu.InfoItemView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_username"
                            app:icon="@drawable/ic_account"
                            app:title="登录账号"
                            app:showDivider="true"/>

                        <com.example.xiaoshoufuzhu.InfoItemView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_sex"
                            app:icon="@drawable/ic_gender"
                            app:title="性别"
                            app:showDivider="true"/>

                        <com.example.xiaoshoufuzhu.InfoItemView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_age"
                            app:icon="@drawable/ic_age"
                            app:title="年龄"
                            app:showDivider="true"/>

                        <com.example.xiaoshoufuzhu.InfoItemView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_email"
                            app:icon="@drawable/ic_email"
                            app:title="电子邮箱"
                            app:showDivider="true"/>

                        <com.example.xiaoshoufuzhu.InfoItemView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_mobile"
                            app:icon="@drawable/ic_phone"
                            app:title="联系电话"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 统计信息卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/card_background">

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>