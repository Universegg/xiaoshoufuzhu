<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 定义自定义选项卡样式 -->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item> <!-- 选中选项卡的文本颜色 -->
        <item name="tabIndicatorColor">@color/white</item> <!-- 选中选项卡的指示器颜色 -->
    </style>

    <!-- 定义选项卡文本样式 -->
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item> <!-- 未选中选项卡的文本颜色 -->
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AgreementDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_gradient</item>
        <item name="buttonBarPositiveButtonStyle">@style/AgreementButton</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AgreementButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#2E7D32</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AgreementTextStyle">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#4CAF50</item>
    </style>
</resources>