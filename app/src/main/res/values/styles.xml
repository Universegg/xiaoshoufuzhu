<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 定义自定义选项卡样式 -->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item> <!-- 选中选项卡的文本颜色 -->
        <item name="tabIndicatorColor">@color/white</item> <!-- 选中选项卡的指示器颜色 -->
    </style>

    <!-- 定义选项卡文本样式 -->
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item> <!-- 未选中选项卡的文本颜色 -->
    </style>

    <style name="InfoItem.Title" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="InfoItem.Value" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:letterSpacing">0.03</item>
    </style>


    <style name="ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AgreementDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_gradient</item>
        <item name="buttonBarPositiveButtonStyle">@style/AgreementButton</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AgreementButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#2E7D32</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AgreementTextStyle">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#4CAF50</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
        <item name="iconPadding">8dp</item>
        <item name="android:gravity">start</item>
    </style>
</resources>