<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 定义自定义选项卡样式 -->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item> <!-- 选中选项卡的文本颜色 -->
        <item name="tabIndicatorColor">@color/white</item> <!-- 选中选项卡的指示器颜色 -->
    </style>

    <!-- 定义选项卡文本样式 -->
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item> <!-- 未选中选项卡的文本颜色 -->
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>